<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.digibuddies.nectus.MainActivity">

    <com.whygraphics.gifview.gif.GIFView xmlns:gif_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_activity_gif_vie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />
    <!--
    <com.digibuddies.nectus.kenbview.KenBurnsView
        android:id="@+id/ken_burns_images"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="800dp"
        android:layout_alignParentEnd="false"
        android:adjustViewBounds="true" />
        -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/colorAscen"
        android:id="@+id/imageView5" />

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/bmb"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="false"
        android:layout_centerInParent="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp" >

    </com.nightonke.boommenu.BoomMenuButton>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/settings_button"/>

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:layout_width="wrap_content"
        app:floating_background_color="@android:color/white"
        app:floating_icon="@drawable/ic_fingerprint_black_24dp"
        app:floating_title="Menu !"
        app:floating_title_color="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="226dp"
        android:id="@+id/mb"
        android:layout_height="80dp" />

    <ImageView
        app:srcCompat="@drawable/aa"
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_height="160dp"
        android:layout_marginTop="15dp" />

</RelativeLayout>

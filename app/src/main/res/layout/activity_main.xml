<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.digibuddies.nectus.MainActivity"
    android:background="@drawable/back2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView5" />

    <com.jetradarmobile.snowfall.SnowfallView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:snowflakesNum="50"
        app:snowflakeAlphaMin="100"
        app:snowflakeAlphaMax="200"
        app:snowflakeSpeedMax="2"
        app:snowflakeSpeedMin="1"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/aid"
        android:src="@drawable/select"
        app:civ_border_color="@android:color/white"
        android:layout_gravity="top|left"
        app:civ_border_width="2dp"
        android:layout_marginLeft="60dp"
        android:visibility="invisible"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/settings_button"
        android:layout_centerHorizontal="true" />


    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/bmb"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:layout_centerVertical="false"
        android:layout_centerInParent="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp" >

    </com.nightonke.boommenu.BoomMenuButton>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="invisible"
        android:id="@+id/settings_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"/>

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:layout_width="wrap_content"
        app:floating_background_color="@android:color/white"
        app:floating_icon="@drawable/ic_fingerprint_black_24dp"
        app:floating_title=" Menu ! "
        app:floating_title_color="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp"
        android:id="@+id/mb"
        android:layout_height="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvp"
        android:visibility="invisible"
        android:fontFamily="serif-monospace"
        android:text="hinlihuii"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:gravity="bottom|center"
        android:layout_marginBottom="25dp"
        android:textAlignment="center" />

    <ImageView
        app:srcCompat="@drawable/aa"
        android:id="@+id/imageView3"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Please Head Onto the Profile section to ceate your profile!"
        android:id="@+id/usname"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/aid"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <com.tomer.fadingtextview.FadingTextView
        android:id="@+id/fadingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:timeout="4000"
        app:texts="@array/examples"
        android:layout_above="@+id/tvp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="76dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:fontFamily="cursive" />

</RelativeLayout>

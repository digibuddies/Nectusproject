<?xml version="1.0" encoding="utf-8"?>
<agency.tango.materialintroscreen.parallax.ParallaxLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.whygraphics.gifview.gif.GIFView
            android:id="@+id/main_activity_gif_vie2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/dfd" />

        <CheckBox
            android:id="@+id/checkBox89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:text="pass"
            app:layout_parallaxFactor="0.4"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textViewv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="6dp"
            android:fontFamily="cursive"
            android:text="About Me"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@android:color/white"
            android:id="@+id/imageView2"
            android:layout_below="@+id/textViewv"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="14dp"
            android:layout_height="275dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:layout_below="@+id/textViewv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@color/second_slide_background"
            android:layout_height="270dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll10"
                android:layout_below="@+id/ll9"
                android:layout_marginTop="2dp">

                <TextView
                    android:text="be "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner10"
                    android:entries="@array/list10"
                    android:prompt="@array/list10"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll9"
                android:layout_below="@+id/ll8"
                android:layout_marginTop="2dp">

                <TextView
                    android:text="A person with same mind as mine would"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll8"
                android:layout_below="@+id/ll7"
                android:layout_marginTop="2dp">

                <TextView
                    android:text="i spend most of my day "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner8"
                    android:entries="@array/list8"
                    android:prompt="@array/list8" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll7"
                android:layout_below="@+id/ll6"
                android:layout_marginTop="2dp">

                <TextView
                    android:text="I just "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:layout_height="wrap_content"
                    android:id="@+id/Spinner7"
                    android:entries="@array/list7"
                    android:prompt="@array/list7"
                    android:layout_width="150dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner72"
                    android:entries="@array/list72"
                    android:prompt="@array/list72"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll6"
                android:layout_below="@+id/ll5"
                android:layout_marginTop="2dp">

                <TextView
                    android:text="someday. My friends say i'm "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner6"
                    android:layout_weight="1"
                    android:entries="@array/list6"
                    android:prompt="@array/list6"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll5"
                android:layout_below="@+id/ll4"
                android:layout_marginTop="2dp">

                <TextView
                    android:text="skills."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text=" I would like to "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner5"
                    android:entries="@array/list5"
                    android:prompt="@array/list5"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll1"
                android:layout_alignParentTop="true">

                <Spinner
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner0"
                    android:entries="@array/list"
                    android:prompt="@array/list" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" You can call me "
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textView111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" username"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll2"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_below="@+id/ll1"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am here since "
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:id="@+id/Spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/list2"
                    android:prompt="@array/list2"
                    android:textAlignment="center" />

                <TextView
                    android:text=". Currently I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l3"
                android:layout_below="@+id/ll2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="am working towards my "
                    android:textSize="18sp"
                    android:textColor="@android:color/white" />

                <Spinner
                    android:id="@+id/Spinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/list3"
                    android:prompt="@array/list3"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll4"
                android:layout_below="@+id/l3"
                android:layout_alignParentStart="true"
                android:weightSum="1"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and i love to pratice my "
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="start" />

                <Spinner
                    android:id="@+id/Spinner4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/list4"
                    android:prompt="@array/list4"
                    android:textAlignment="center" />

            </LinearLayout>


        </RelativeLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/checkBox89"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="74dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp" />

    </RelativeLayout>


</agency.tango.materialintroscreen.parallax.ParallaxLinearLayout>


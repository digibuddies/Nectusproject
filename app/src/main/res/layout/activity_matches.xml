<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.digibuddies.cnectus.matches"
    android:id="@+id/container"
    android:background="@drawable/proback">

    <TextView
        android:text="ALIKE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alike"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textSize="40sp"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="3dp"
        arc:srcCompat="@color/boom2"
        android:id="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/alike"
        android:layout_marginTop="10dp" />

    <com.bvapp.arcmenulibrary.widget.ObservableScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="155dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:contextClickable="true"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/color2" />

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_below="@+id/imageView8"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/holo_blue_light"
                        android:text="Connect!"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/kuser"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/kav"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="user"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/kav"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/select"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/kdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kuser"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/kdetail"
                        android:layout_gravity="bottom"
                        app:srcCompat="@drawable/q" />

                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignStart="@+id/kdetail"
                        android:layout_below="@+id/imageView8"
                        android:layout_gravity="bottom|left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="serif"
                        android:text="match"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="normal|italic" />


                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/color2" />

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_below="@+id/imageView22"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/holo_blue_light"
                        android:text="Connect!"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/p2"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="user"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/p2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/select"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/detail2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/detail2"
                        android:layout_gravity="bottom"
                        app:srcCompat="@drawable/q" />

                    <TextView
                        android:id="@+id/tv22"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignStart="@+id/detail2"
                        android:layout_below="@+id/imageView22"
                        android:layout_gravity="bottom|left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="serif"
                        android:text="match"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="normal|italic" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/color2" />

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="false"
                        android:layout_below="@+id/imageView33"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/holo_blue_light"
                        android:text="Connect!"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/p3"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="user"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/p3"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/select"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/detail3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/detail3"
                        android:layout_gravity="bottom"
                        app:srcCompat="@drawable/q" />

                    <TextView
                        android:id="@+id/tv33"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignStart="@+id/detail3"
                        android:layout_below="@+id/imageView33"
                        android:layout_gravity="bottom|left"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="serif"
                        android:text="match"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="normal|italic" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/search"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp"
                android:background="@color/first_slide_background"
                android:elevation="15dp"
                android:text="Search Users"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </com.bvapp.arcmenulibrary.widget.ObservableScrollView>

    <com.bvapp.arcmenulibrary.ArcMenu
        android:id="@+id/arcMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menuChildAnim="true"
        arc:menuChildSize="48dp"
        arc:menuClickAnim="true"
        arc:menuGravity="Bottom_Right"
        arc:menuImage="@drawable/ic_fingerprint_black_24dp"
        arc:menuNormalColor="@android:color/white"
        arc:menuShadowElevation="true"
        arc:menuType="normal">

    </com.bvapp.arcmenulibrary.ArcMenu>

    <TextView
        android:text="Top 3 matches based on your answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:id="@+id/detp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textAlignment="center" />

    <TextView
        android:text="Not enough data to process! Please answer some more questions..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/front"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:fontFamily="sans-serif-smallcaps" />

</RelativeLayout>

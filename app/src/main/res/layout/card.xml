<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_alignParentStart="false"
    android:layout_alignParentBottom="false"
    android:clickable="true"
    android:contextClickable="true"
    app:cardBackgroundColor="@android:color/white"
    android:id="@+id/kcard"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:srcCompat="@drawable/color4" />

        <TextView
            android:id="@+id/kuser"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/kav"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-smallcaps"
            android:text="user"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/kmail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/kuser"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="email"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal|italic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/kav"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/select"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/kdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cht"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:text=" "
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/kdetail"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/q" />

        <TextView
            android:id="@+id/kdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/remove"
            android:layout_below="@+id/imageView8"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp"
            android:fontFamily="serif"
            android:text="Date"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal|italic" />

        <Button
            android:id="@+id/remove"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="0dp"
            android:layout_marginTop="45dp"
            android:background="@android:color/holo_red_dark"
            android:text="Remove"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/kmatch"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/kdetail"
            android:layout_alignTop="@+id/kav"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif"
            android:lines="2"
            android:text="0.00% \nsimilar"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal|italic" />

        <Button
            android:id="@+id/cht"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/kuser"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:background="@color/global_color_green_primary"
            android:text="Chat!"
            android:visibility="invisible" />

        <Switch
            android:id="@+id/sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/kdate"
            android:layout_alignStart="@+id/kdetail"
            android:padding="2dp"
            android:text="More Info "
            android:textColor="@color/black" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

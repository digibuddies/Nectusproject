<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_alignParentStart="false"
    android:layout_alignParentBottom="false"
    android:clickable="true"
    android:contextClickable="true"
    app:cardBackgroundColor="@android:color/white"
    android:id="@+id/kcard"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/color2"
            android:id="@+id/imageView"
            android:layout_height="70dp" />

        <TextView
            android:text="user"
            android:id="@+id/kuser"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_below="@+id/kav"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="email"
            android:id="@+id/kmail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            android:layout_below="@+id/kuser"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|italic"
            android:layout_marginTop="5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/kav"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/select"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/kdetail"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cht"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/q"
            android:id="@+id/imageView8"
            android:layout_gravity="bottom"
            android:layout_below="@+id/kdetail"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:id="@+id/kdate"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="normal|italic"
            android:fontFamily="serif"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom|right"
            android:layout_alignEnd="@+id/kdetail"
            android:layout_below="@+id/imageView8"
            android:layout_height="wrap_content" />

        <Button
            android:text="Remove"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:id="@+id/remove"
            android:textSize="12sp"
            android:layout_width="75dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:background="@android:color/holo_red_dark"
            android:layout_height="25dp"
            android:layout_marginTop="45dp" />

        <TextView
            android:id="@+id/kmatch"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/kdetail"
            android:layout_alignTop="@+id/kav"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif"
            android:lines="2"
            android:text="0.00% \nsimilar"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal|italic" />

        <Button
            android:text="Chat!"
            android:layout_height="30dp"
            android:id="@+id/cht"
            android:background="@color/global_color_green_primary"
            android:layout_marginLeft="0dp"
            android:visibility="invisible"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/kuser"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

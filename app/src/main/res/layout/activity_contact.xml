<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.digibuddies.nectus.contact"
    android:background="@drawable/b3">

    <TextView
        android:text="Connect Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:id="@+id/ccr"
        android:textSize="30sp"
        android:textColor="@android:color/white" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:clickable="true"
        android:contextClickable="true"
        app:cardBackgroundColor="@android:color/white"
        android:id="@+id/cd3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ccr">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/color2"
                android:id="@+id/imageView"
                android:layout_height="70dp" />

            <TextView
                android:text="user"
                android:id="@+id/kuser"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_below="@+id/kav"
                android:layout_centerHorizontal="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/kav"
                android:src="@drawable/s1"
                app:civ_border_width="2dp"
                app:civ_border_color="@android:color/white"
                android:layout_marginTop="13dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:id="@+id/kdetail"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kuser"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/q"
                android:id="@+id/imageView8"
                android:layout_gravity="bottom"
                android:layout_below="@+id/kdetail"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="0.00% similar"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/matchc"
                android:layout_gravity="bottom|left"
                android:textStyle="normal|italic"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:fontFamily="serif"
                android:layout_alignTop="@+id/kav"
                android:layout_alignStart="@+id/kdetail"
                android:visibility="visible" />

            <io.ghyeok.stickyswitch.widget.StickySwitch
                android:id="@+id/ssc"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                app:iconPadding="10dp"
                app:iconSize="20dp"
                app:leftIcon="@drawable/no"
                app:rightIcon="@drawable/ic_check_black_24dp"
                app:sliderBackgroundColor="@color/colorSliderBackground"
                app:switchColor="@color/colorSwitchColor"
                app:textColor="@android:color/black"
                app:leftText="Decline"
                app:rightText="Accept"
                app:textSize="10sp"
                app:selectedTextSize="12dp"
                android:layout_below="@+id/kdate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="90dp" />

            <TextView
                android:text="This user have requested to connect "
                android:layout_width="wrap_content"
                android:id="@+id/kdate"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="normal|italic"
                android:fontFamily="serif"
                android:layout_marginRight="5dp"
                android:layout_gravity="bottom|right"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kdetail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_height="3dp"
        app:srcCompat="@color/back"
        android:layout_below="@+id/ccr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/imageView9"
        android:layout_width="300dp" />

    <Button
        android:text="SAVE"
        android:id="@+id/save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_width="200dp"
        android:background="@color/colorSwitchColor"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp" />


</RelativeLayout>
